extends layout

block content
	main
	h1 Create New Post
	form(method="POST")
		label(for="title") Title:
		input(id='title' type="text" name='title' required)
		label(for="blogpost") Write your post
		textarea(id='blogpost' name="blogpost", cols="30", rows="10" required)
		input(type="submit", value="Create Post")